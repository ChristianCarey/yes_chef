<% content_for :title, "Menu" %>
<% present @menu do |menu_presenter| %>
  <h2>
    <%= menu_presenter.date_range %>
    <div class="btn-group pull-right" role="group" aria-label="...">
      <%= link_to "Edit", edit_chef_menu_path(@menu), class: "btn btn-default btn-success" %>
       <%= link_to "Destroy", chef_menu_path(@menu), method: :delete, data:{confirm: "Are you sure? cannot be undone." }, class: "btn btn-default btn-danger" %>
     </div>
  </h2>

  <h4>Available Menu Items</h4>
  <ul>
    <%= menu_presenter.menu_items %>
  </ul>
  <h4>Orders</h4>
  <table class="table table-striped table-bordered">
    <thead>
      <td>Order Date</td>
      <td>Customer Name</td>
      <td>Completion Date</td>
      <td>Order Total</td>
      <td>Order Details</td>
    </thead>
    <tbody>
      <%= render partial: 'shared/order', collection: @menu.orders %>
    </tbody>
  </table>

<% end %>
