<div class="new-ingredient-form col-sm-offset-2">
  <%= form_for @ingredient, html: { class: "form-inline" } do |f| %>
    <div class="form-group">
      <%= f.label :name, "Create a new ingredient: " %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <%= f.submit "Create", class: 'btn btn-primary' %>
  <% end %>
</div>
<hr>
<div class="col-sm-2 col-sm-offset-4">
  <table class ="table table-striped table-bordered">
    <tr>
      <th>
        Name
      </th>
    </tr>
    <%= render @ingredients %>
  </table>
</div>
