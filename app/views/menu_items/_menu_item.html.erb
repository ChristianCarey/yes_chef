<% present menu_item do |menu_item_presenter| %>
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default menu-item-partial">
        <div class="panel-heading">
          <h3 class="panel-title">
            <span class="col-xs-6 col-sm-4">
              <%= link_to menu_item.name, menu_item, class: "menu_item_link" %>
            </span>
            <span class="col-xs-6 col-sm-8">
              <%= menu_item_presenter.categories %>
            </span>
          </h3>
          <div class="clearfix"></div>
        </div>
        <div class="panel-body row">
          <div class="panel-body-text col-xs-8">
            <%= menu_item_presenter.description %>
            <%= menu_item_presenter.ingredients %>
          </div>
          <div class="panel-body-image col-xs-offset-1 col-xs-2">
            <%= menu_item_presenter.panel_body_image %>
          </div>
        </div>
        <% if current_chef?(menu_item) %>
          <div class="panel-footer links">
            <div class="btn-group" role="group" aria-label="...">
              <%= link_to "Edit", edit_menu_item_path(menu_item), class: "btn btn-default btn-success btn-xs" %>
               <%= link_to "Destroy", menu_item_path(menu_item), method: :delete, data:{confirm: "Are you sure? cannot be undone." }, class: "btn btn-default btn-danger btn-xs" %>
             </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
