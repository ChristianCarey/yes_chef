<%= simple_form_for menu_item, html: { class: 'syncronousUpload' } do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <h4> Ingredients </h4>
  <%= f.association :ingredients %>
  <%= f.simple_fields_for :ingredients, menu_item.ingredients.build do |fi| %>
    <%= fi.input :name %>
  <% end %>
  <h4>Price</h4>
  <%= f.input :price, label: "Price in dollars" %>
  <h4> Categories </h4>
  <%= f.association :categories %>
  <%= f.simple_fields_for :categories, menu_item.categories.build do |fi| %>
    <%= fi.input :name %>
  <% end %>
  <%= render partial: 'img_upload_form', locals:{form: f} %>
  <%= f.submit %>
<% end %>
