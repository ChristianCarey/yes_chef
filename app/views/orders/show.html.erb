<% present @order do |order_presenter| %>
<h1>Order Details</h1>

<p>
  <strong>Your order will be ready on: </strong>
  <%= stringify_date(@order.menu.completion_date) %>
</p>

<h3>What you'll be recieving:</h3>

<table class='table table-striped table-bordered'>
  <thead>
    <th>Item</th>
    <th>Quantity</th>
    <th>Price</th>
  </thead>
  <tbody>
    <% @order.order_items.each do |mio| %>
      <tr>
        <td>
          <strong><%= mio.menu_item.name %></strong>
          <br>
          <%= mio.menu_item.description %>
        </td>
        <td>
          <%= mio.quantity %>
        </td>
        <td>
          <%= format_currency(mio.quantity * mio.sale_price_cents) %>
        </td>
      </tr>
    <% end %>
      <tr>
        <td></td>
        <td><strong>Total price:</strong></td>
        <td>
          <%= format_currency(@order.total) %>
        </td>
      </tr>
  </tbody>
</table>
<% end %><!-- order presenter -->
