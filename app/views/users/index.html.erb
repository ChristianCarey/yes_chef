<div class="row">
<div class="col-md-6">
  <h4>Invite Customer</h4>
  <hr>
  <%= form_tag send_invite_path, method: "GET", class: "form-inline" do |f| %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, nil, placeholder: "customer name (optional)", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, nil, placeholder: "customer email", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Send Invite", class: 'btn btn-primary' %>
  </div>
<% end %>
<hr>
<h4>Your Customers</h4>
  <table class="table table-striped">
  <tr>
    <th>
      Name
    </th>
  </tr>
    <%= render partial: 'customer', collection: @customers , as: :customer %>
  </table>
</div>
